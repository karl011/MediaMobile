<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelephoneActivity"
    android:background="@drawable/back"
    >

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/annuler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/annuler" />

    <TextView
        android:id="@+id/phoneScreen"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginBottom="24dp"
        android:text=""
        android:textSize="50px"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714"
        android:background="@drawable/back_layout_keyboard"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/touchOne"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="1"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="343dp" />

            <Button
                android:id="@+id/touchTwo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="2"
                app:layout_constraintStart_toEndOf="@+id/touchOne"
                tools:layout_editor_absoluteY="343dp" />

            <Button
                android:id="@+id/touchTree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="3"
                app:layout_constraintStart_toEndOf="@+id/touchTwo"
                tools:layout_editor_absoluteY="343dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/touchFour"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="4"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="343dp" />

            <Button
                android:id="@+id/touchFive"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="5"
                app:layout_constraintStart_toEndOf="@+id/button"
                tools:layout_editor_absoluteY="343dp" />

            <Button
                android:id="@+id/touchSix"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="6"
                tools:layout_editor_absoluteX="186dp"
                tools:layout_editor_absoluteY="343dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/touchSeven"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="7"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="343dp" />

            <Button
                android:id="@+id/touchEight"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="8"
                app:layout_constraintStart_toEndOf="@+id/button"
                tools:layout_editor_absoluteY="343dp" />

            <Button
                android:id="@+id/touchNine"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="9"
                tools:layout_editor_absoluteX="186dp"
                tools:layout_editor_absoluteY="343dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/touchStar"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="*"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="343dp" />

            <Button
                android:id="@+id/touchZero"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="0"
                app:layout_constraintStart_toEndOf="@+id/button"
                tools:layout_editor_absoluteY="343dp" />

            <Button
                android:id="@+id/touchHash"
                android:layout_width="wrap_content"
                android:layout_height="200px"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="#"
                tools:layout_editor_absoluteX="186dp"
                tools:layout_editor_absoluteY="343dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/touchCall"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@drawable/button_custom"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/local_phone" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/delete" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>